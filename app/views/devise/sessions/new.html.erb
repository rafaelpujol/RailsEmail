<strong style="font-size: 30px" class="text-primary">Control de Acceso</strong>
<div class="ibox-content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email ,"Correo Electronico" %><br />
            <%= f.email_field :email, autofocus: true , :class => "LoginUser"%>
          </div>

          <div class="form-group">
            <%= f.label :password,"ContraseÃ±a" %><br />
            <%= f.password_field :password, autocomplete: "off", :class => "LoginPass" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me ,"Recordar me"%>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Aceder" %>
          </div>
        <% end %>
</div>
<br/>
  <%= link_to "Registrar me !!!", new_registration_path(resource_name) %><br />
